<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>瘦瘦瘦瘦瘦耶</title>
	<script src="/js/jquery-1.11.3.min.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/style-metronic.css">
	<!-- <link rel="stylesheet" href="/css/modern.css"> -->
	<link rel="stylesheet" href="/css/style.css">
	<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
    <script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"> </script>
    <style type="text/css">
    </style>
	
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/metro.min.js"></script>
</head>
<body>
	<%- include header %>
	<div class="container">
		<form method="post" action="/deliver">
			<div class="form-group">
    			<label for="author">文章类型</label>
    			<select class="form-control" id="selector">
					<option>C</option>
					<option>JS</option>
					<option>其他语言</option>
					<option>生活吐槽</option>
					<option>心情广播</option>
				</select>
  			</div>
			<div class="form-group" id="tit">
   		 		<label for="title">文章名称</label>
    			<input type="text" class="form-control" id="title" name="title" placeholder="文章名称">
			</div>
    		
  			<div class="form-group" id="aut">
    			<label for="select">文章作者</label>
    			<input type="text" class="form-control" id="author" name="author" placeholder="文章作者">
  			</div>
			<input type="text" id="content" name="content" value="" hidden/>
			<input type="text" name="selectorh" id="selectorh" value="" hidden/>
			<input type="text" name="summaryh" id="summaryh" value="" hidden/>
			<div class="form-group" id="sum">
    			<label for="author">概要</label>
    			<textarea class="form-control" rows="3"  id="summary"></textarea>
  			</div>
			
			<script id="editor" type="text/plain" style="width:100%;height:500px;"></script>

			<br />
			<button class="btn btn-default pull-right" id="sub">     提交     </button>
		</form>
	

	</div>
	<%- include footer %>
	<script>
   
    $(function(){
    	var ue = UE.getEditor('editor');
    	$("#selector").change(function(){
    		if($("#selector").val() == '心情广播'){
	    	 	$("#aut").stop().fadeOut()
	    	 	$("#sum").stop().fadeOut()
	    	 	$("#tit").stop().fadeOut()
	    	 }else{
	    	 	$("#aut").stop().fadeIn()
	    	 	$("#sum").stop().fadeIn()
	    	 	$("#tit").stop().fadeIn()
	    	 }
    	})
    	$("#sub").click(function(){
    	 	var con = UE.getEditor('editor').getContent();
    	 	var summary = $("#summary").val();
    	 	var selector = $("#selector").val();
    	 	$("#summaryh").val(summary);
    	 	$("#selectorh").val(selector);
    	 	//alert(summary);
    	 	$("#content").val(con);

    	})


    })
	</script>
</body>
</html>